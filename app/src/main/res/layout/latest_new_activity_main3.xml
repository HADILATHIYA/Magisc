<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banner_ads_main">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_color"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/subcat"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <include
                    layout="@layout/latest_new_mix_native"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="one_day_cricket"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/latest_in1"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/app_color"
                                android:gravity="center"
                                android:text="Basket Ball"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="Twenty_Matches"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/latest_in2"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/app_color"
                                android:gravity="center"
                                android:text="Cricket"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <include
                    android:id="@+id/poster1"
                    layout="@layout/latest_new_help_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="T10_Matches"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/latest_in3"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/app_color"
                                android:gravity="center"
                                android:text="Rugby"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="T10_Matches"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/latest_in4"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/app_color"
                                android:gravity="center"
                                android:text="Football"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <include
                    android:id="@+id/poster2"
                    layout="@layout/latest_new_help_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <include
        android:id="@+id/banner_ads_main"
        layout="@layout/latest_new_banner_ad_view_"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/bottofullads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

<!--        <ImageView-->
<!--            android:id="@+id/full_img"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/latest_f_one"-->
<!--            android:scaleType="fitXY" />-->

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/latest_cjfnfgbh"
            android:backgroundTint="#979797"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/latest_dfkgsjdfg" />

        <TextView
            android:id="@+id/ad_notification_view"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_margin="5dp"
            android:background="@drawable/latest_roundads"
            android:gravity="center"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
